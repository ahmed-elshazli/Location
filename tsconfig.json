{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* ⬇️ عدل القيم دي لـ false عشان تتخطى أخطاء الـ Unused Variables ⬇️ */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - تعطيل التشديد مؤقتاً */
    "strict": false, // ✅ خليه false مؤقتاً لتسهيل الـ Build
    "noUnusedLocals": false, // ✅ حل مشكلة TS6133
    "noUnusedParameters": false, // ✅ حل مشكلة المتغيرات المهملة
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false // ✅ حل مشكلة الأنواع غير المعرفة في الـ Charts
  },
  "include": ["src"]
}